{
  "name": "@lars/source",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "nx",
    "pack": "electron-builder --dir",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && nx build --base-href /",
    "deploy": "electron-builder build --publish always --x64 --ia32 -c ./electron-builder.json",
    "shell:dev": "nx run angular-electron:app-shell:dev",
    "shell:prod": "nx run angular-electron:app-shell:production",
    "front-deployer": "nx build --base-href=/ -c production && node deployer/bin/index.js",
    "front-deployer:only": "node deployer/bin/index.js",
    "build:dev": "npm run build",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "nx serve lars",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve --enable-gpu-rasterization",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build:installer": "npm run build:prod && electron-builder build -c ./electron-builder.json",
    "test": "nx test --watch=false",
    "test:watch": "nx test",
    "e2e": "npm run build:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "nx lint",
    "coverage-report": "nx test --no-watch --code-coverage"
  },
  "main": "apps/lars-main/main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~18.1.0",
    "@angular/cdk": "~18.1.2",
    "@angular/common": "~18.1.0",
    "@angular/compiler": "~18.1.0",
    "@angular/core": "~18.1.0",
    "@angular/forms": "~18.1.0",
    "@angular/material": "~18.1.2",
    "@angular/platform-browser": "~18.1.0",
    "@angular/platform-browser-dynamic": "~18.1.0",
    "@angular/router": "~18.1.0",
    "@jsverse/transloco": "^7.4.3",
    "@nx/angular": "19.5.3",
    "@popperjs/core": "^2.11.8",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~18.1.0",
    "@angular-devkit/core": "~18.1.0",
    "@angular-devkit/schematics": "~18.1.0",
    "@angular-eslint/eslint-plugin": "^18.0.1",
    "@angular-eslint/eslint-plugin-template": "^18.0.1",
    "@angular-eslint/template-parser": "^18.0.1",
    "@angular/cli": "~18.1.0",
    "@angular/compiler-cli": "~18.1.0",
    "@angular/language-service": "~18.1.0",
    "@angular/localize": "~18.1.0",
    "@angular/material": "^18.1.2",
    "@nx/devkit": "19.5.3",
    "@nx/eslint": "19.5.3",
    "@nx/eslint-plugin": "19.5.3",
    "@nx/jest": "19.5.3",
    "@nx/js": "19.5.3",
    "@nx/playwright": "19.5.3",
    "@nx/workspace": "19.5.3",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~18.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.4.0",
    "@types/node": "18.16.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@typescript-eslint/utils": "^7.16.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-debug": "^4.0.0",
    "electron-reloader": "^1.2.3",
    "electron-updater": "^6.2.1",
    "electron-window-state": "^5.0.3",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.15.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-preset-angular": "~14.1.0",
    "npm-run-all": "^4.1.5",
    "nx": "19.5.3",
    "ping": "^0.4.4",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.5.2",
    "wait-on": "^7.2.0",
    "webdriver-manager": "^12.1.9"
  }
}
